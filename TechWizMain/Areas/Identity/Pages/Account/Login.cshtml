@page
@using Microsoft.CodeAnalysis.Differencing;
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

  
    }
  </style>

    <div class="breadcrumb_content">
        <h3>My Account</h3>
        <ul>
            <li><a href="index.html">home</a></li>
            <li>My account</li>
        </ul>
    </div>
  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Sign up now</h2>

            <form action="" method="post" id="account" >
                            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
              <!-- Email input -->
              <div class="form-outline mb-4">
                                <input asp-for="Input.UserNameOrEmail" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.UserNameOrEmail" class="form-label"></label>
                                <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>

                            <div class="form-check d-flex justify-content-center mb-4">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
              <!-- Submit button -->
              <button id="login-submit" type="submit" class="btn btn-primary btn-block mb-4">
                Sign in
              </button>

              <!-- Register buttons -->

                      
            </form>

                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            article
                                            about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>or sign up with:</p>
                                        <p>
                                            <button type="submit" class="btn btn-link btn-floating mx-1" name="provider" value="Google" title="Log in using your Google account">
                                                <i class="fab fa-google"></i>
                                            </button>
                                        </p>
                                    </div>
                                </form>

                            }
                        }
                        <div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
          </div>
        </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="/images/logo/bg-01.jpg" class="w-100 h-auto rounded-4 shadow-4 mx-lg-auto mb-lg-auto"
                     alt="" />
            </div>


    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
