@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<style>
    .custom-padding {
        padding-top: 60px;
        padding-bottom: 60px;
    }
    button[type="submit"].btn {
        cursor: pointer; /* Set cursor to pointer */
    }
    .btn-custom {
        border-radius: 8px;
    }
    .center {
        text-align: center;
    }
    .margin-bottom {
        margin-bottom: 12px;
    }
</style>

<div class="container">
    <div class="row justify-content-center custom-padding">
    <div class="col-md-6">
        <img src="/images/test2.jpg" alt="" class="img-fluid"/>
    </div>
    <div class="col-md-6">
            <h1 class="center">@ViewData["Title"]</h1>
            <h2 class="center">Reset your password.</h2>
            <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control margin-bottom" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control margin-bottom" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control margin-bottom" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
                <button type="submit" class="w-100 btn btn-lg btn-success btn-custom">Reset</button>
        </form>
    </div>
</div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
