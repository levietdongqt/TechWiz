@model TechWizMain.Models.Feedback
@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<div class="container">
    <div class="card bg-transparent border-0 shadow-lg">
        <div class="card-body p-5 text-center">
            <h2 class="fw-bold mb-5 text-primary">FeedBacks Details</h2>

            <dl class="row">
                <dt class="col-sm-3 fs-6 text-muted">
                    Name:
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3 fs-6 text-muted">
                    FeedBack Date:
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Html.DisplayFor(model => model.FeedbackDate)
                </dd>
                <dt class="col-sm-3 fs-6 text-muted">
                    Subject:
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Html.DisplayFor(model => model.Subject)
                </dd>
                <dt class="col-sm-3 fs-6 text-muted">
                    Message:
                </dt>
                <dd class="col-sm-9 fs-5">
                    @Html.DisplayFor(model => model.Message)
                </dd>
            </dl>

            <div class="d-flex justify-content-center mt-4">
                <a asp-action="FeedBacks" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back To List</a>
            </div>

        </div>
    </div>
</div>
