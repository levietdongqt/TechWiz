@model IEnumerable<TechWizMain.Areas.Identity.Data.UserManager>

@{
	ViewBag.Title = "User Management";
	Layout = "_AdminLayout";
}

<div class="d-flex align-items-center mb-3">
				<div>
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Admin">PAGES</a></li>
						<li class="breadcrumb-item active">User Management</li>
					</ul>
					<h1 class="page-header mb-0">Users List</h1>
				</div>
			</div>
			
			<div class="card">
				<ul class="nav nav-tabs nav-tabs-v2 px-4">
					<li class="nav-item me-3"><a href="#ActiveTab" class="nav-link active px-2"
				data-bs-toggle="tab">All</a></li>
					<li class="nav-item me-3"><a href="#BannedTab" class="nav-link px-2"
							data-bs-toggle="tab">Banned</a></li>
				</ul>
				<div style="padding: 1.1rem!important;" class="tab-content ">
					<div class="tab-pane fade show active" id="ActiveTab">
						<div class="input-group mb-4">
							<div class="flex-fill position-relative">
								<div class="input-group">
									<input type="text" class="form-control ps-35px" placeholder="Filter User">
									<div class="input-group-text position-absolute top-0 bottom-0 bg-none border-0"
										style="z-index: 1020;">
										<i class="fa fa-search opacity-5"></i>
									</div>
								</div>
							</div>
						</div>


						<div class="table-responsive">
							<table class="table table-hover text-nowrap">
								<thead>
									<tr>
										<th class="border-top-0 pt-0 pb-2"></th>
										<th class="border-top-0 pt-0 pb-2">ID</th>
										<th class="border-top-0 pt-0 pb-2">DateOfBirth</th>
										<th class="border-top-0 pt-0 pb-2">UserName</th>
										<th class="border-top-0 pt-0 pb-2">FullName</th>
										<th class="border-top-0 pt-0 pb-2">Status</th>
										<th class="border-top-0 pt-0 pb-2">Email</th>
										<th class="border-top-0 pt-0 pb-2">Phone Number</th>
										<th class="border-top-0 pt-0 pb-2">Action</th>
									</tr>
								</thead>
							<tbody>
								@foreach (var x in ViewBag.Active)
								{
									<tr>
										<td class="w-10px align-middle">
											<div class="form-check">
												<input type="checkbox" class="form-check-input" id="product1">
												<label class="form-check-label" for="product1"></label>
											</div>
										</td>
										@if (x.Id != null)
                                        {
											var count = 1;
										<td class="align-middle"><a href="page_order_details.html">@(count++)</a></td>
                                        }
										<td class="align-middle">@x.DateOfBirth</td>
										<td class="align-middle">@x.UserName</td>
										<td>@x.FullName</td>
										<td class="py-1 align-middle">
											<span
												class="badge bg-teal text-teal-800 bg-opacity-25 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
												<i
													class="fa fa-circle text-teal fs-9px fa-fw me-5px"></i> @(x.status? "Active" : "Lock") </span>
										</td>
										<td class="align-middle">
											@x.Email
										</td>
										<td class="align-middle">@x.PhoneNumber</td>
										<td class="align-middle">
											<form method="post" asp-action="Banned" asp-controller="Admin">
												<input type="hidden" name="Id" value="@x.Id" />
												<input type="submit" value="Banned" class="btn btn-danger" />
											</form>
										</td>
									</tr>		
								}
							</tbody>
							</table>
						</div>

						<div class="d-md-flex align-items-center">
							<div class="me-md-auto text-md-left text-center mb-2 mb-md-0">
								Showing 1 to 10 of 57 entries
							</div>
							<ul class="pagination mb-0 justify-content-center">
								<li class="page-item disabled"><a class="page-link">Previous</a></li>
								<li class="page-item"><a class="page-link" href="#">1</a></li>
								<li class="page-item active"><a class="page-link" href="#">2</a></li>
								<li class="page-item"><a class="page-link" href="#">3</a></li>
								<li class="page-item"><a class="page-link" href="#">4</a></li>
								<li class="page-item"><a class="page-link" href="#">5</a></li>
								<li class="page-item"><a class="page-link" href="#">6</a></li>
								<li class="page-item"><a class="page-link" href="#">Next</a></li>
							</ul>
						</div>
					</div>
				</div>
				<div class="tab-content" style="padding: 1.1rem!important;">
		<div class="tab-pane fade" id="BannedTab">
			<div class="input-group mb-4">
				<div class="flex-fill position-relative">
					<div class="input-group">
						<input type="text" class="form-control ps-35px" placeholder="Filter User">
						<div class="input-group-text position-absolute top-0 bottom-0 bg-none border-0"
							 style="z-index: 1020;">
							<i class="fa fa-search opacity-5"></i>
						</div>
					</div>
				</div>
			</div>


			<div class="table-responsive">
				<table class="table table-hover text-nowrap">
					<thead>
						<tr>
							<th class="border-top-0 pt-0 pb-2"></th>
							<th class="border-top-0 pt-0 pb-2">ID</th>
							<th class="border-top-0 pt-0 pb-2">DateOfBirth</th>
							<th class="border-top-0 pt-0 pb-2">UserName</th>
							<th class="border-top-0 pt-0 pb-2">FullName</th>
							<th class="border-top-0 pt-0 pb-2">Status</th>
							<th class="border-top-0 pt-0 pb-2">Email</th>
							<th class="border-top-0 pt-0 pb-2">Phone Number</th>
						</tr>
					</thead>
					<tbody>
						
						@foreach (var x in ViewBag.Banned)
						{
							<tr>
								<td class="w-10px align-middle">
									<div class="form-check">
										<input type="checkbox" class="form-check-input" id="product1">
										<label class="form-check-label" for="product1"></label>
									</div>
								</td>
								@if (x.Id != null)
								{
									var count = 1;
									<td class="align-middle">@(count)</td>					
								}
								<td class="align-middle">@x.DateOfBirth</td>
								<td class="align-middle">@x.UserName</td>
								<td>@x.FullName</td>
								<td class="py-1 align-middle">
									<span class="badge bg-teal text-teal-800 bg-opacity-25 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
										<i class="fa fa-circle text-teal fs-9px fa-fw me-5px"></i> @(x.status ? "Active" : "Lock")
									</span>
								</td>
								<td class="align-middle">
									@x.Email
								</td>
								<td class="align-middle">@x.PhoneNumber</td>
							</tr>
						}
					</tbody>
				</table>
			</div>

			<div class="d-md-flex align-items-center">
				<div class="me-md-auto text-md-left text-center mb-2 mb-md-0">
					Showing 1 to 10 of 57 entries
				</div>
				<ul class="pagination mb-0 justify-content-center">
					<li class="page-item disabled"><a class="page-link">Previous</a></li>
					<li class="page-item"><a class="page-link" href="#">1</a></li>
					<li class="page-item active"><a class="page-link" href="#">2</a></li>
					<li class="page-item"><a class="page-link" href="#">3</a></li>
					<li class="page-item"><a class="page-link" href="#">4</a></li>
					<li class="page-item"><a class="page-link" href="#">5</a></li>
					<li class="page-item"><a class="page-link" href="#">6</a></li>
					<li class="page-item"><a class="page-link" href="#">Next</a></li>
				</ul>
			</div>
		</div>
	</div>
</div>
			

		

