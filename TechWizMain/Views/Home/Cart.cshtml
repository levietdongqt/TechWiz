@model IEnumerable<TechWizMain.Models.Product>

@{
var cart = ViewBag.Cart as List<Product>;
if(cart == null) {
cart = new List<Product>(); 
}
}
<div class="mini_cart">
     <form asp-action="Index" asp-controller="Home">
    <div class="cart_gallery">
        <div class="cart_close">
            <div class="cart_text">
                <h3>cart</h3>
            </div>
            <div class="mini_cart_close">
                <a href="javascript:void(0)"><i class="fa-solid fa-circle-xmark" style="color: #0b0e14;"></i></a>
            </div>
        </div>

        @foreach (var x in cart)
        {

            <div class="cart_item">
                <div class="cart_img">
                    <a href="#"><img src="@x.ImageUrl" alt="@x.Name"></a>
                </div>
                <div class="cart_info">
                    <a asp-controller="Home" asp-action="Details">@x.Name</a>
                    <input type="number" value="@x.InventoryQuantity"><span> @x.BasePrice$</span>
                </div>
                <div class="cart_remove d-grid ">
                    <button class="btn btn-success rounded-2"><a href=""><i class="fa-solid fa-pen" style="color: #070303;"></i></a></button>
                    <button class="btn btn-danger rounded-2"><a href=""><i class="fa-solid fa-trash" style="color: #020203;"></i></a></button>
                </div>
            </div>

        }
    </div>
    <div class="mini_cart_table">
        <div class="cart_table_border">
            <div class="cart_total">
                <span>Sub total:</span>
                <span class="price">$@(cart.Sum(item => item.InventoryQuantity * item.BasePrice))</span>
            </div>
            <div class="cart_total mt-10">
                <span>total:</span>
                <span class="price">$125.00</span>
            </div>
        </div>
    </div>
     <div class="mini_cart_footer">
         <div class="cart_button">
             <a href="cart.html"><i class="fa fa-shopping-cart"></i> View
                 cart</a>
         </div>
         <div class="cart_button">
             <a class="active"asp-controller="Home" asp-action="Checkout"><i class="fa fa-sign-in"></i>
                 Checkout</a>
         </div>

     </div>
     </form>
</div>

