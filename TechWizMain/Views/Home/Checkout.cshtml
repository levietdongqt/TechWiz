@using Microsoft.AspNetCore.Identity;
@using TechWizMain.Areas.Identity.Data;
@inject UserManager<UserManager> _userManager;
@inject SignInManager<UserManager> SignInManager


@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@{
    var currentUser = await _userManager.GetUserAsync(User);
}
  <!--breadcrumbs area start-->
    <div class="breadcrumbs_area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_content">
                        <h3>Checkout</h3>
                        <ul>
                            <li><a href="index.html">home</a></li>
                            <li>Checkout</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="Checkout_section  mt-100" id="accordion">
        <div class="container">
            <div class="checkout_form">
                <div class="row">         
                        <form  asp-action="CheckoutHandler" asp-controller="Home">
                            <div class="row">
                            <div class="col-lg-6 col-md-6">
                            <h3>Billing Details</h3>
                            <div class="col-lg-12 mb-20">
                                <div>
                                    <input type="hidden" name="txtId" value="@currentUser.Id">
                                </div>
                                <div class="col-lg-12 mb-20">
                                    <label>Full Name <span>*</span></label>
                                    <input type="text" name="txtName" value="@currentUser.FullName">
                                </div>
                                <div class="col-12 mb-20">
                                    <label>Email <span>*</span></label>
                                    <input type="text" name="txtEmail" value="@currentUser.Email">
                                </div>
                                <div class="col-12 mb-20">
                                    <label>Street address <span>*</span></label>
                                    <input  type="text" name="txtAddress" value="@currentUser.Address" />
                                </div>
                                <div class="col-lg-12 mb-20">
                                    <label>Phone<span>*</span></label>
                                    <input type="text" name="txtPhone" value="@currentUser.PhoneNumber">
                                </div>
                                <div class="col-12 mb-20">
                                    <label>State / County</label>
                                    <input type="text">
                                </div>
                                
                            <div class="order_button">
                                <button type="submit">Proceed to Pay</button>
                            </div>
                            </div>
                        </div>
                            
                            <div class="col-lg-6 col-md-6" id="targetElement1">
                            
                            </div>
                    
                    </div>
                        </form>
                    </div>                   
                    </div>
                </div>
            </div>
@section scripts{
    <script>
        
        $(document).ready(function () {
            
            // Gọi hàm để tải dữ liệu ngay từ đầu
            loadCartData();
                    
            function loadCartData() {
                
                $.ajax({
                    type: "GET",
                    url: "https://localhost:5000/ShowCart",
                    success: function (data) {
                        var html = '';
                        for (var i = 0; i < data.length; i++) {
                            var item = data[i];
                            html += '<table>'
                                + '</tr>'
                                + '<th>Name</th>'
                                + '<th>Quantity</th>'
                                + '<th>Sale</th>'
                                + '</tr>'
                                + '<tr>'
                                + '<td>'
                                + '<input type="text" name = "txtNameProduct" value ="' + item.product.name + '">'
                                + '</td>'
                                + '<td>'
                                + '<input type="number" name = "QuatityProduct" value ="' + item.quantity + '">'
                                + '</td>'
                                + '<td>'
                                + '<input type="number" name = "SaleProduct" value ="' + (item.salePrice * item.quantity) + '" readonly>'
                                + '</td>'
                                + '</tr>'
                                + '</table>'

                        }
                        $('#targetElement1').append(html);
                    }
                });
            }
            
        });
    </script>
}



    <!--Checkout page section end-->