@using Microsoft.AspNetCore.Identity
@using TechWizMain.Areas.Identity.Data;
@inject SignInManager<UserManager> SignInManager
@inject UserManager<UserManager> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        var currentUser = UserManager.GetUserAsync(User).Result;
        var fullName = currentUser.FirstName;
        <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @fullName!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
